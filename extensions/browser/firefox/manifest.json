{
  "manifest_version": 2,
  "name": "Canvas Browser Sync",
  "description": "Tab sync browser extension for Canvas",
  "version": "2.1",
  "homepage_url": "https://getcanvas.org",
  "icons": {
    "64": "icons/logo_64x64.png",
    "128": "icons/logo_128x128.png",
    "256": "icons/logo_256x256.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "canvas-firefox@getcanvas.org",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": [
      "js/store.modern.min.js",
      "js/socket.io.min.js",
      "config.js",
      "background.js"
    ],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content-script.js"
      ],
      "css": [
        "css/content.css"
      ],
      "run_at": "document_start"
    }
  ],

  "browser_action": {
    "default_icon": "icons/logo_128x128.png",
    "browser_style": false,
    "default_popup": "/menu.html"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "nativeMessaging",
    "notifications",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "downloads",
    "identity",
    "http://*/*",
    "https://*/*"
  ]

}
