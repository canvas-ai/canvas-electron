{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-unused-vars": "warn",
        "eqeqeq": ["warn", "always"],
        "curly": ["warn", "all"],
        "quotes": ["warn", "single", { "avoidEscape": true }],
        "semi": ["warn", "always"],
        "no-console": "off",
        "indent": ["warn", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["warn", "unix"],
        "comma-dangle": ["warn", "always-multiline"]
    },
    "ignorePatterns": [
        "*_test*",
        "**/assets",
        "**/public"
    ]
}
