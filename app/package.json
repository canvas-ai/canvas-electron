{
  "name": "canvas",
  "productName": "Canvas",
  "version": "1.1.0",
  "description": "Context layer on top of your unstructured universe",
  "main": "canvas-server.js",
  "scripts": {
    "setenv": "#load env variables from .env file\nif [ -f .env ]; then\n  export $(cat .env | sed 's/#.*//g' | xargs)\nfi",
    "test": "eslint . --ext .js",
    "jsdoc": "jsdoc -r -c jsdoc.json",
    "cli": "node ui/cli/server.js",
    "repl": "node ui/cli/repl.js",
    "electron": "electron ui/electron/main.js",
    "server:dev": "node canvas-server.js",
    "server:start": "PM2_HOME=../var/pm2 pm2 start ecosystem.config.js --watch",
    "server:stop": "PM2_HOME=../var/pm2 pm2 stop ecosystem.config.js",
    "server:status": "PM2_HOME=../var/pm2 pm2 status ecosystem.config.js",
    "server:logs": "PM2_HOME=../var/pm2 pm2 logs ecosystem.config.js"
  },
  "author": "me@idnc.sk",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "cacache": "^18.0.0",
    "chalk": "=5.2.0",
    "cli-table3": "^0.6.3",
    "conf": "^10.2.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dbus-native": "^0.4.0",
    "debug": "^4.3.4",
    "deemon": "^1.8.0",
    "detect-libc": "^2.0.2",
    "dotenv": "^16.3.1",
    "eventemitter2": "^6.4.9",
    "express": "^4.18.2",
    "file-type": "=18.5.0",
    "flexsearch": "^0.7.31",
    "fs-extra": "^11.1.1",
    "ip": "^2.0.0",
    "is-electron": "^2.2.2",
    "lmdb": "^2.8.5",
    "lru-ttl-cache": "^2.4.7",
    "magic-bytes.js": "^1.0.14",
    "mime-types": "^2.1.35",
    "minimist": "^1.2.8",
    "mkdirp": "^3.0.1",
    "node-machine-id": "^1.1.12",
    "node-notifier": "^10.0.1",
    "pm2": "^5.3.0",
