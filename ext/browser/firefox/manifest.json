{
  "manifest_version": 2,  
  "name": "CanvasUI Sync",
  "description": "Canvas browser extension for the CanvasUI desktop app.",
  "version": "1.0",
  "icons": {
    "16": "icons/message.svg",
    "48": "icons/message.svg",
    "64": "icons/message.svg",
    "96": "icons/message.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "canvas@getcanvas.org",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": [
      "js/socket.io.min.js", 
      "js/background.js"
    ]
  },

  "browser_action": {
    "default_icon": "icons/message.svg",
    "browser_style": true,
    "default_popup": "/menu.html"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "nativeMessaging",
    "notifications",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "downloads",
    "identity",
    "http://*/*",
    "https://*/*"
  ]

}
